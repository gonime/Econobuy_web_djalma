@model Econobuy_Web.Models.tb_cliente

@{
    ViewBag.Title = "Cliente";
}

@using (Html.BeginForm("LoginCliente", "Cliente"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Login</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.cli_st_user, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cli_st_user, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cli_st_user, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.cli_st_senha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.cli_st_senha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cli_st_senha, "", new { @class = "text-danger" })
                <div style="color: red">
                    @{
                        if (IsPost)
                        {
                            @TempData["Erro"]
                        }
                    }
                </div>
            </div>
        </div>

        

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-6">
                <a>@Html.ActionLink("Cadastre-se", "Cadastro", "Cliente", new { area = "" }, new { @style = "color: white; text-decoration:none; ", @class = "btn btn-primary" })</a>
            </div>
        </div>
    </div>
}
