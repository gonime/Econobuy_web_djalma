@model IEnumerable<Econobuy_Web.Models.CarrinhoTrad>

@{
    ViewBag.Title = "Carrinho";
}

<h2>Carrinho de compras</h2>

<table class="table table-hover table-bordered bg-light">
    <tr class="bg-dark text-light">
        <th>
            @Html.DisplayNameFor(model => model.ProdID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qtde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Valor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ValorTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat01)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat02)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cat03)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtde)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat01)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat02)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cat03)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.ActionLink("Remover", "DeletaItemCarrinhoTrad", new { id = item.Id }, new { onclick = "return confirm('Confirme a remoção')" })
            </td>
        </tr>
    }

</table>
<button type="button" class="btn btn-outline-warning active btn-lg btn-block text-white">
    @Html.ActionLink("Finalizar Pedido", "FinalizaPedidoTrad")
</button>