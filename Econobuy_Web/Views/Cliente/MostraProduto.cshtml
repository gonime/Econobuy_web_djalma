@model Econobuy_Web.Models.CarrinhoTrad

@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
    if (Session["clienteID"] == null)
    {
        Response.Redirect("~/Cliente/Index");
    }
    ViewBag.Title = Model.Nome;
}


@using (Html.BeginForm("AdicionaAoCarrinhoTrad", "Cliente"))
{
    @Html.AntiForgeryToken()

    <table class="table table-hover table-bordered bg-light">
        <tr class="bg-dark text-light">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat01)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat02)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cat03)
            </th>
        </tr>

        <tr>
            <td>
                <div><img src="/Cliente/MostraImagemProduto/@Model.ProdID" alt="" height=150 width=150 /></div>
                @Html.DisplayFor(model => model.Nome)
            @Html.HiddenFor(model => model.Nome)
            </td>
            <td>
                @Html.DisplayFor(model => model.Descricao)
                @Html.HiddenFor(model => model.Descricao)
            </td>
            <td>
                @Html.DisplayFor(model => model.Valor)
                @Html.HiddenFor(model => model.Valor)
            </td>
            <td>
                @Html.DisplayFor(model => model.Cat01)
                @Html.HiddenFor(model => model.Cat01)
            </td>
            <td>
                @Html.DisplayFor(model => model.Cat02)
                @Html.HiddenFor(model => model.Cat02)
            </td>
            <td>
                @Html.DisplayFor(model => model.Cat03)
                @Html.HiddenFor(model => model.Cat03)
            </td>
            @Html.HiddenFor(model => model.ProdID)
        </tr>

    </table>

    <div class="row" style="margin-top: 50px">
        <div class="col-md-2"><h4>Quantidade:</h4></div>
        <div class="col-md-1">
            @Html.TextBoxFor(model => model.Qtde, new { type = "number", min = "1", max = "50" })
        </div>

                <div class="col-md-3">
                    <input type="submit" name="submitButton" value="Adicionar ao carrinho" class="btn btn-primary" />
                </div>
        <!--
        <div class="col-md-3">
            @Html.ActionLink("Adicionar ao carrinho", "AdicionaAoCarrinho", "Cliente", new { ProdID_ = Model.ProdID, ProdNome_ = Model.Nome, Qtde_ = Model.Qtde, ValorUnidade_ = Model.Valor, ValorTotal_ = Model.Qtde * Model.Valor }, new { @class = "btn btn-primary" })
        </div>
            -->
    </div>
}
