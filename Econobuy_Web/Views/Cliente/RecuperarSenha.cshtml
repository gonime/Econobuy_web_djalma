@model Econobuy_Web.Models.tb_cliente

@{
    ViewBag.Title = "RecuperarSenha";
}

<h2>Recuperar Senha</h2>

@using (Html.BeginForm("RecuperaSenha", "Cliente"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal order-md-1">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <label>Insira seu e-mail cadastrado no sistema</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cli_st_email, new { htmlAttributes = new { @class = "form-control", @id = "email" } })
                <div style="color: red">
                    @{
                        if (IsPost)
                        {
                            @TempData["Query"]
                        }
                    }
                </div>
                <div style="color: lightblue">
                    @{
                        if (IsPost)
                        {
                            @TempData["Query"]
                        }
                    }
                </div>
            </div>
        </div>



        <div class="form-group row">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/inputmask")
    <script>
            $(document).ready(function () {
                $("#email").inputmask("email");
            });
    </script>
}