@model IEnumerable<Econobuy_Web.Models.CadastroProduto>

@{
    Layout = "~/Views/Shared/_LayoutMercado.cshtml";
    if (Session["mercadoID"] == null)
    {
        Response.Redirect("~/Mercado/Index");
    }
    ViewBag.Title = "Cadastrar Produto";
}


<p><btn>@Html.ActionLink("Novo Departamento", "CadastrarNovoDepartamento", "Mercado", new { area = "" }, new { @style = "color: white; text-decoration:none; ", @class = "btn btn-warning" })</btn></p>
<table class="table table-hover table-bordered bg-light">

    <tr class="bg-dark text-light">
        <th>
            @Html.DisplayNameFor(model => model.Cat01)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cat01)
            </td>
            <td>
                @Html.ActionLink("Selecionar", "CadastrarProdutoCategoria", new { id = item.Cat01ID, nome = item.Cat01 })
            </td>
        </tr>
    }

</table>
