@model Econobuy_Web.Models.tb_mercado

@{
    ViewBag.Title = "Recuperar Senha";
}

<h2>Recuperar Senha</h2>

@using (Html.BeginForm("RecuperaSenha", "Mercado"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal order-md-1">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })



        <div class="form-group">
            <div class="col-md-10">
                <h5>Insira seu e-mail cadastrado no sistema</h5>
                @Html.EditorFor(model => model.mer_st_email, new { htmlAttributes = new { @class = "form-control", @id = "email" } })
                <div style="color: red">
                    @{
                        if (IsPost)
                        {
                            @TempData["Erro"]
                        }
                    }
                </div>
                <div style="color: darkblue">
                    @{
                        if (IsPost)
                        {
                            @TempData["Query"]
                        }
                    }
                </div>
            </div>
        </div>



        <div class="form-group ">
            <div class="col-md-offset-2 col-md-6">
                <input type="submit" value="Enviar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/inputmask")
    <script>
            $(document).ready(function () {
                $("#email").inputmask("email");
            });
    </script>
}