<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Econobuy - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <h3 class="px-2">@Html.ActionLink("Econobuy", "Index", "Home", new { area = "" }, new { @style = "color: rgb(217, 217, 2); text-decoration:none; " })</h3>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto align-items-center">
                <li class="nav-item active px-2">
                    <a>@Html.ActionLink("Consultar Pedidos", "ConsultarPedidos", "Mercado", new { area = "" }, new { @style = "color: white; text-decoration:none; " })</a>
                </li>
                <li class="nav-item px-2">
                    <a>@Html.ActionLink("Avaliações de Clientes", "Index", "Mercado", new { area = "" }, new { @style = "color: white; text-decoration:none; " })</a>
                </li>
                <li class="nav-item dropdown px-2">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown">Produtos</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">Consultar Produtos</a> <a class="dropdown-item" href="#">Cadastrar Novo Produto</a>
                    </div>
                </li>
                <li class="nav-item dropdown px-2">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown">Relatórios</a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item">Produtos</a> <a class="dropdown-item">Pedidos</a> <a class="dropdown-item">Clientes</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        <br />
        <br />
        @RenderBody()
        <br />
        <br />
        <footer class="fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Econobuy</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
